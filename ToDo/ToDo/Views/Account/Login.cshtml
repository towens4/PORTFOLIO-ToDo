@model ToDo.ViewModels.LoginViewModel;

<h2 class="my-4">Login</h2>
<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-container">
        <label asp-for="Email"></label>
        <div>
            <input asp-for="Email" placeholder="Enter Your Email:" class="form-input" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-container">
        <label asp-for="Password"></label>
        <div>
            <input asp-for="Password" placeholder="Password" class="form-input" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary my-4">Login</button>
    <span class="mx-4">Don't have an account? <a class="account-link" asp-action="Register" asp-controller="Account">Sign Up</a></span>
    
</form>
