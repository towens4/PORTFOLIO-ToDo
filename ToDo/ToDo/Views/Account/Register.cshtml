@model ToDo.ViewModels.AssignmentListModel;

<h2 class="my-4">Register</h2>
<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-container">
        <label asp-for="RegisterModel.Email"></label>
        <div>
            <input asp-for="RegisterModel.Email" placeholder="Enter Your Email:" class="form-input" />
            <span asp-validation-for="RegisterModel.Email"></span>
        </div>
    </div>
    <div class="form-container">
        <label asp-for="RegisterModel.Password"></label>
        <div>
            <input asp-for="RegisterModel.Password" placeholder="Password" class="form-input" />
            <span asp-validation-for="RegisterModel.Password"></span>
        </div>
    </div>
    <div class="form-container">
        <label asp-for="RegisterModel.ConfirmPassword"></label>
        <div>
            <input asp-for="RegisterModel.ConfirmPassword" class="form-input" />
            <span asp-validation-for="RegisterModel.ConfirmPassword"></span>
        </div>
    </div>
    
    <button type="submit" class="btn btn-primary my-4">Register</button>
    <span class="mx-4">Have an account? <a class="account-link" asp-action="Login" asp-controller="Account">Log In</a></span>
</form>
